<div class="webhook">
  <div class="url">
      {{ widget('XLite\\View\\Button\\CopyLink', copy=this.paymentMethod.getWebhookURL()) }}
      {{ this.paymentMethod.getWebhookURL() }}
  </div>
    {{ widget('XLite\\View\\Tooltip', text=t('Webhook URL is your store\'s URL through which Coinbase Commerce informs your store about any changes in the order'), isImageTag='true', className='help-icon') }}
</div>

<div>
  <ul>
    <li class="step-1">
      <div class="number">1</div>
      <p>{{ t('Open the page "Webhooks" in the "Settings" section of https://commerce.coinbase.com/dashboard: https://commerce.coinbase.com/dashboard/settings')|raw }}</p>
    </li>
    <li class="step-2">
      <div class="number">2</div>
      <p>{{ t('In the section "Webhook subscriptions", click "Add an endpoint".')|raw }}</p>
    </li>
    <li class="step-3">
      <div class="number">3</div>
      <p>{{ t('In the form that opens, paste the "Webhook URL" value into the field "New Webhook Subscription" and click "Save".')|raw }}</p>
    </li>
  </ul>

</div>

<table cellspacing="1" cellpadding="5" class="settings-table">
  <tr>
    <td class="setting-name">
    <label for="settings_app_key">{{ t('App Key') }}</label>
    </td>
    <td>
    <input type="text" id="settings_app_key" name="settings[app_key]" value="{{ this.paymentMethod.getSetting('app_key') }}" class="validate[required,maxSize[255]]" />
    </td>
  </tr>
  <tr>
    <td class="setting-name">
    <label for="settings_secret_key">{{ t('Secret Key') }}</label>
    </td>
    <td>
    <input type="text" id="settings_secret_key" name="settings[secret_key]" size="64" value="{{ this.paymentMethod.getSetting('secret_key') }}" class="validate[required,maxSize[255]]" />
    </td>
  </tr>
</table>
